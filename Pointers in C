#include <stdio.h>
#include <stdlib.h> // Required for the abs() function

void update(int *a, int *b) {
    // 1. Store the original values using the dereference operator (*)
    int val_a = *a;
    int val_b = *b;
    
    // 2. Update the value at address 'a' with the sum
    *a = val_a + val_b;
    
    // 3. Update the value at address 'b' with the absolute difference
    *b = abs(val_a - val_b);
}

int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    scanf("%d %d", &a, &b);
    update(pa, pb);
    printf("%d\n%d", a, b);

    return 0;
}
